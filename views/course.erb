<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"><%=@type%>
            <small><%=@course.display_name%></small>
        </h1>
        <h5>Found <%=@projects.size%> projects</h5>
    </div>
</div>

<%@winners.each do |p| %>
<div class="row winner">
  <div class="col-md-8 col-sm-6 col-md-offset-2 col-sm-offset-3 portfolio-item">
    <h2>Winning entry:</h2>
    <% if !p.fields[:link].nil? %><a href="<%=p.link%>"><% end %>
      <% if p.fields[:screenshot].nil? %>
      <img class="img-responsive" src="/img/placeholder.png" alt="">
      <% else %>
      <img class="img-responsive" src="<%=p.screenshot.image_url%>" alt="">
      <% end %>
    <% if !p.fields[:link].nil? %></a><% end %>
    <h3>
      <% if !p.fields[:link].nil? %><a href="<%=p.link%>"><% end %>
      <%=p.title%>
      <% if !p.fields[:link].nil? %></a><% end %>
    </h3>
    <p><%=p.creators.join(", ")%></p>
  </div>
</div>
<%end %>


<%@projects.select{|p| p.winner == 0}.each_with_index do |p, i| %>
  <% if i % 3 == 0 && i != 0 %>
  </div>
  <% end %>
  <% if i % 3 == 0 %>
  <div class="row">
  <% end %>
    <div class="col-sm-4 portfolio-item">
      <% if !p.fields[:link].nil? %><a href="<%=p.link%>"><% end %>
        <% if p.fields[:screenshot].nil? %>
        <img class="img-responsive" src="/img/placeholder.png" alt="">
        <% else %>
        <img class="img-responsive" src="<%=p.screenshot.image_url%>" alt="">
        <% end %>
      <% if !p.fields[:link].nil? %></a><% end %>
      <h3>
        <% if !p.fields[:link].nil? %><a href="<%=p.link%>"><% end %>
        <%=p.title%>
        <% if !p.fields[:link].nil? %></a><% end %>
      </h3>
      <p><%=p.creators.join(", ")%></p>
    </div>
<% end %>
  </div>
<div class="footnote">
<p>Are we missing your entry? Contact <a href="http://twitter.com/caffeinateddave/"><span class="mail">@CaffeinatedDave</span></a> to get it added</p>
</div>
